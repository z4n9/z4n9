<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abbeyroad"
    tools:context=".MainActivity4">


    <!--ЭТО ПОЛЕ ДЛЯ ДЖОСТИКА ПЕРВОГО ИГРОКА-->

    <LinearLayout
        android:id="@+id/joystick1"
        android:layout_width="175dp"
        android:layout_height="145dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937">


        <!--ЭТО ПОЛЕ ДЛЯ ПОЛЕ  ДЛЯ КНОПКИ ЛЕВО-->
        <LinearLayout
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!--ЭТО  ПОЛЕ  ДЛЯ КНОПКИ ЛЕВО-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/left"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    android:contentDescription="@string/app_name"
                    android:onClick="OnClickLeft"
                    android:scaleType="centerCrop"
                    android:src="@drawable/left" />
            </LinearLayout>
        </LinearLayout>

        <!--ЭТО ПОЛЕ ДЛЯ ПОЛЕ  ДЛЯ КНОПКОК УДАРА И УДАРА НОГОЙ-->
        <LinearLayout
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--ЭТО  ПОЛЕ  ДЛЯ КНОПКОК УДАРА -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:scrollbarAlwaysDrawHorizontalTrack="false">

                <ImageButton
                    android:id="@+id/panch"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#00FFFFFF"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/punch" />
            </LinearLayout>

            <!--ЭТО  ПОЛЕ ПО ЦЕНТРУ НА ВСЯКИЙ-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="vertical">


            </LinearLayout>

            <!--ЭТО  ПОЛЕ  ДЛЯ КНОПКОК  УДАРА НОГОЙ-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/kick"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kick" />
            </LinearLayout>
        </LinearLayout>

        <!--ЭТО  ПОЛЕ  ПОЛЕ ДЛЯ КНОПКИ ПРАВО -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!--ЭТО    ПОЛЕ ДЛЯ КНОПКИ ПРАВО -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/right"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    android:contentDescription="@string/app_name"
                    android:onClick="OnClickRight"
                    android:scaleType="centerCrop"
                    android:src="@drawable/right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--ЭТО ПОЛЕ ДЛЯ ДЖОСТИКА ПЕРВОГО ИГРОКА 2-->
